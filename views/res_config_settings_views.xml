<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_website_discount" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="website_info_settings" position="after">
                <h2>Shop - Website Discount</h2>
                <div class="row mt16 o_settings_container" id="website_discount">
                    <div class="col-12 o_setting_box" id="website_discount_setting">
                        <div class="o_setting_right_pane">
                            <label for="website_sale_whole_discount_code" string="Website Discount Code"/>
                            <div class="text-muted">
                                Website Discount Code
                            </div>
                            <div class="content-group">
                                <div class="row mt16 ms-4">
                                    <field name="website_sale_whole_discount_code"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
